			<KeyValue key="defaultBackground" value="shop-card-bg" type="string"/>
			<KeyValue key="defaultFrameTexture" value="shop-card-small-frame-default" type="string"/>
			<KeyValue key="selectedFrameTexture" value="shop-card-small-frame-selected" type="string"/>
			<KeyValue key="hoverFrameTexture" value="shop-card-small-frame-hover" type="string"/>
			<KeyValue key="discountedBackground" value="shop-card-bg" type="string"/>
			<KeyValue key="ownedBackground" value="shop-card-bg" type="string"/>
